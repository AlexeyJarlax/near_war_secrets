<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackMenuLayout"
    tools:context=".ItemLoaderActivity">

    <Button
        android:id="@+id/button_back_from_loader"
        style="@style/SecondaryButtonsAndText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:textSize="@dimen/text_size_sp22"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_finder"
        android:layout_below="@id/button_back_from_loader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="6dp"
        app:reverseLayout="true"
        app:tint="@color/yp_light_gray_and_yp_white"
        tools:context=".MedialabActivity"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/util_item_photo_unit" />
    <!--        style="@style/SettingsMenuButtons"-->

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="360dp"
        android:layout_height="460dp"
        android:layout_above="@+id/button_camera_set"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <include
        layout="@layout/util_dialog_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_finder"
        android:layout_below="@id/button_back_from_loader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginEnd="6dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_camera_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp12">

        <Button
            android:id="@+id/button_camera"
            style="@style/ErrorButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cam_bat_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/flip"
            style="@style/SymbolButtonsBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↱↲"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_capture"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_camera"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_gallery"
            style="@style/ErrorButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/galery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_capture"
            style="@style/ErrorButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snapshot"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/button_for_cover2"
            style="@style/ButtonForCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp60"
            android:alpha="0.4"
            android:text=""
            android:visibility="invisible"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/loading_indicator2"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            tools:visibility="visible" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/loading_indicator4"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:text="@string/background_process"
        android:layout_marginBottom="@dimen/dp12"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>