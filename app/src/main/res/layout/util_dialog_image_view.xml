<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/util_dialog_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    app:layout_constraintGuide_end="0dp"
    >

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintGuide_end="0dp">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/image_view_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="6dp"
            android:layout_marginStart="@dimen/dp4"
            android:layout_marginEnd="@dimen/dp4"
            android:scaleType="centerInside"
            tools:visibility="visible"
            app:layout_constraintGuide_end="0dp"/>

        <TextView
            android:id="@+id/imageDialogFileName"
            style="@style/ErrorTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp44"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/sample"
            android:textSize="@dimen/text_size_sp19"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/loading_indicator3"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="@dimen/dp36"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <Button
            android:id="@+id/button_for_cover3"
            style="@style/ButtonForCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:text=""
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_for_image_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp12"
        android:foregroundGravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/image_dialog_btn_share"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="32dp"
            android:text="✉️"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_left"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/image_dialog_acceptance_button"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="32dp"
            android:text="✔️"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_left"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/image_dialog_tern_left"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="22dp"
            android:text="↶"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_faq"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_btn_share" />

        <Button
            android:id="@+id/image_dialog_faq"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="84dp"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp12"
            android:padding="@dimen/z"
            android:paddingTop="-10dp"
            android:text="❔"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_right"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_tern_left" />

        <Button
            android:id="@+id/image_dialog_tern_right"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_marginBottom="22dp"
            android:paddingTop="-12sp"
            android:text="↷"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_del_pct"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_faq" />

        <Button
            android:id="@+id/image_dialog_del_pct"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_marginBottom="32dp"
            android:text="🗑️"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_tern_right" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>