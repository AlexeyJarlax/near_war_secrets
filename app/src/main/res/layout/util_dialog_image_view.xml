<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/util_dialog_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/image_view_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="6dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/imageDialogFileName"
            style="@style/ErrorTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp44"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/sample"
            android:textSize="@dimen/text_size_sp19"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/imageDialogFileDate"
            style="@style/ErrorTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:gravity="center"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/sample"
            android:textSize="@dimen/text_size_sp16"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/imageDialogFileName"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/imageDialogKey"
            style="@style/ErrorTextBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp12"
            android:text="@string/sample"
            android:textSize="@dimen/text_size_sp16"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/imageDialogFileDate"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/loading_indicator3"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_margin="@dimen/dp36"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <Button
            android:id="@+id/image_dialog_btn_share"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_marginEnd="@dimen/dp4"
            android:text="✉️"
            android:textSize="22sp"
            android:layout_marginBottom="@dimen/dp24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_left"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/image_dialog_acceptance_button"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_marginEnd="@dimen/dp4"
            android:text="✔️"
            android:textSize="22sp"
            android:layout_marginBottom="@dimen/dp26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_left"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/image_dialog_tern_left"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/dp4"
            android:text="↶"
            android:textSize="36sp"
            android:layout_marginBottom="@dimen/dp14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_faq"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_btn_share"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/image_dialog_faq"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/dp4"
            android:padding="@dimen/z"
            android:paddingTop="-10dp"
            android:text="❔"
            android:textSize="26sp"
            android:layout_marginBottom="@dimen/dp8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_tern_right"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_tern_left"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/image_dialog_tern_right"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/dp4"
            android:paddingTop="-12sp"
            android:text="↷"
            android:textSize="36sp"
            android:layout_marginBottom="@dimen/dp14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_dialog_del_pct"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_faq"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/image_dialog_del_pct"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:text="🗑️"
            android:textSize="22sp"
            android:layout_marginBottom="@dimen/dp26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_dialog_tern_right"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/mini_button_for_cover"
            style="@style/ErrorButtons"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:text="✖️"
            android:textSize="22sp"
            android:alpha="0.5"
            android:layout_margin="@dimen/dp12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
          />

        <Button
            android:id="@+id/button_for_cover3"
            style="@style/ButtonForCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:text=""
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>