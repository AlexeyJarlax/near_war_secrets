<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".security.KeyInputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_encryption_key"
            android:layout_marginTop="@dimen/dp24"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/edit_text_key"
                style="@style/KeyButtons"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_weight="2"
                android:hint="хххххххххххххххх"
                android:inputType="textVisiblePassword" />

            <Button
                android:id="@+id/button_generate"
                style="@style/ErrorButtons"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="0.1"
                android:padding="@dimen/z"
                android:text="@string/generate"
                android:textSize="@dimen/text_size_sp14" />

        </LinearLayout>

            <TextView
                android:id="@+id/edit_text_key_helper"
                style="@style/TrackTextSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp24"
                android:layout_weight="0.4"
                android:gravity="center"
                android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/yp_white_and_yp_black" />

            <Button
                android:id="@+id/button_cancel"
                style="@style/ErrorButtons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:backgroundTint="@color/kototeka_thumb_color"
                android:text="@string/no_key" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/yp_white_and_yp_black" />

            <Button
                android:id="@+id/constant_key"
                style="@style/ErrorButtons"
                android:backgroundTint="@color/yp_blue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:text="@string/constant_key"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/yp_white_and_yp_black" />

            <Button
                android:id="@+id/variable_key"
                style="@style/ErrorButtons"
                android:backgroundTint="@color/yp_blue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:text="@string/variable_key" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/yp_white_and_yp_black" />

            <Button
                android:id="@+id/button_old_key"
                style="@style/ErrorButtons"
                android:layout_height="@dimen/dp78"
                android:layout_width="match_parent"
                android:padding="@dimen/z"
                android:backgroundTint="@color/yp_blue"
                android:text="@string/old_key_button_text"
                android:textSize="@dimen/text_size_sp16"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp12"
                android:background="@color/yp_white_and_yp_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/key_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:gravity="center"
            android:text="@string/key_info_new"
            android:textSize="@dimen/text_size_sp19" />

    </LinearLayout>
</ScrollView>