<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/FrontMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context=".KeyInputActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать ключ шифрования:"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_key"
            style="@style/KeyButtons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/edit_text_key_helper"
            android:gravity="center"
            android:hint="хххххххххххххххх"
            android:inputType="text" />

        <TextView
            android:id="@+id/edit_text_key_helper"
            style="@style/FrontMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp24"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:paddingVertical="0dp"
            android:gravity="center"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_confirm"
            style="@style/MainMenuButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="Подтвердить"
            android:textSize="@dimen/dp16" />

        <Button
            android:id="@+id/button_generate"
            style="@style/MainMenuButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="Сгенерировать"
            android:textSize="@dimen/dp16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            style="@style/MainMenuButtons"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="Не использовать шифрование"
            android:textSize="@dimen/dp16" />
    </LinearLayout>

    <TextView
        android:id="@+id/key_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/key_info"
        android:textSize="@dimen/text_size_sp14" />

</LinearLayout>