<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/util_item_track"
android:layout_width="match_parent"
android:layout_height="@dimen/dp78"
android:background="@android:color/transparent"
android:gravity="center"
android:orientation="horizontal"
android:paddingStart="@dimen/dp12">

<ImageView
    android:id="@+id/artwork_image_view"
    style="@style/Placeholder"
    android:layout_width="@dimen/dp60"
    android:layout_height="@dimen/dp60"
    android:scaleType="centerCrop"
    android:src="@drawable/ic_audio"
    tools:src="@drawable/ic_audio" />

<LinearLayout

    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp16"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/track_name_text_view"
        style="@style/TrackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/z"
        tools:text="@string/sample"
        android:maxLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artist_name_text_view"
            style="@style/TrackTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            tools:text="@string/sample" />

        <ImageView
            android:id="@+id/ic_point"
            style="@style/IcPoint"
            android:layout_width="@dimen/dp12"
            android:layout_height="@dimen/dp12"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_point"
            android:background="@android:color/transparent"
            tools:src="@drawable/ic_point" />

        <TextView
            android:id="@+id/track_duration_text_view"
            style="@style/TrackTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sample" />
    </LinearLayout>

</LinearLayout>

<ImageView
    android:id="@+id/button_right_arrow"
    style="@style/TrackStyleCustom"
    android:layout_width="@dimen/dp36"
    android:layout_height="@dimen/dp36"
    android:background="@android:color/transparent"
    android:src="@android:drawable/ic_media_play" />

</LinearLayout>