<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackMenuLayout"
    tools:context=".ItemLoaderActivity">

    <Button
        android:id="@+id/button_back_from_gal"
        style="@style/SecondaryButtonsAndText"
        android:layout_height="wrap_content"
        android:text="@string/button_back"
        android:textSize="@dimen/text_size_sp22"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        tools:ignore="VisualLintButtonSize"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view_photos_gal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/util_item_photo_unit"
        tools:context=".MedialabActivity"
        app:tint="@color/yp_light_gray_and_yp_white"
        android:layout_above="@id/view_finder"
        android:layout_below="@id/button_back_from_gal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:reverseLayout="true" />
    <!--        style="@style/SettingsMenuButtons"-->

    <include layout="@layout/util_dialog_image_view" />

</RelativeLayout>